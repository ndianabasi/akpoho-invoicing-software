{
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/session",
      "@adonisjs/view",
      "@adonisjs/auth",
      "@adonisjs/lucid",
      "@adonisjs/redis",
      "@adonisjs/shield",
      "@adonisjs/bouncer",
      "@adonisjs/mail",
      "@adonisjs/lucid-slugify"
    ],
    "lib": ["es5", "es6", "dom", "dom.iterable", "es2015"]
  }
}
